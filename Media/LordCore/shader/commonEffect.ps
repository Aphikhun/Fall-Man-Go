#version 100

uniform sampler2D texSampler;

varying mediump vec4 color;
varying mediump vec2 texCoord;
uniform mediump vec4 alpha;
// uniform mediump int isUI;

void main(void)
{
	mediump vec4 textureColor = texture2D(texSampler, texCoord);
	// gl_FragColor = textureColor * color;
	mediump vec4 finalColor =  textureColor * color;
	gl_FragColor = vec4(finalColor.r, finalColor.g, finalColor.b, finalColor.a * alpha.x);	
}