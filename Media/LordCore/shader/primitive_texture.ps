#version 100

uniform mediump vec3 objectColor;
uniform sampler2D texSampler;

varying mediump vec2 texCoord;
varying mediump vec3 lightFactor;

void main(void)
{
    mediump vec4 texColor = texture2D(texSampler, texCoord);
    mediump vec3 color = texColor.rgb * objectColor;

    mediump vec3 result = lightFactor * color;
    gl_FragColor = vec4(result, 1.0);
}