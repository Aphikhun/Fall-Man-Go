#version 100

uniform samplerCube texSamplerA;
uniform samplerCube texSamplerB;
varying mediump vec3 TexCoords;
uniform mediump float transition;
uniform mediump vec4 brightness;

void main(void)
{
	mediump vec4 cubeA = textureCube(texSamplerA, TexCoords);
	mediump vec4 cubeB = vec4(0,0,0,0);
	if(transition>0.0)
	{
		cubeB = textureCube(texSamplerB, TexCoords);
	}
	gl_FragColor = mix(cubeA, cubeB, transition) * brightness;
}
